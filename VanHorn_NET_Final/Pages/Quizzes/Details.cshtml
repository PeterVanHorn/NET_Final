@page
@model VanHorn_NET_Final.Pages.Quizzes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.QuizName)
        </dt>
        <dd class="col-sm-10">
            @Model.Quiz.QuizName
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Questions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Quiz.Questions)
            {
                <tr>
                    <td>
                        @item.QuestionText
                    </td>
                </tr>
                <tr>
                    <td>
                        <ul>
                            @foreach (var opt in item.Options)
                            {
                                <li>@opt.OptionText</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Quiz.QuizId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
