@page
@model VanHorn_NET_Final.Pages.Questions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Model.Question.QuestionText
        </dd>
    </dl>
    <table class="table">
        <tbody>
            @{
                int optionNum = 1;
            }
            @foreach (var item in Model.Question.Options)
            {
                <tr>
                    <td>
                        Option @optionNum: @item.OptionText @item.Correct
                    </td>
                </tr>
                optionNum++;
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Question.QuestionId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
