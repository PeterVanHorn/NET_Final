@page
@model VanHorn_NET_Final.Pages.Questions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Model.Question.QuestionText
        </dd>
        <a asp-page="./Edit" asp-route-id="@Model.Question.QuestionId">Edit Question</a>
    </dl>
    <table class="table">
        <tbody>
            <tr>
                <header>QuizId</header>
                @Model.Question.QuizId
            </tr>
            @{
                int optionNum = 1;
            }
            <tr>
                <td>
                    @if (Model.Question.Options != null)
                    {
                        @foreach (var item in Model.Question.Options)
                        {
                            <header>Options</header>
                            <ul>
                                <li>Option @optionNum: @item.OptionText @item.Correct</li>
                                @{
                                    optionNum++;
                                }
                            </ul>
                            int questionId = Model.Question.QuestionId;
                            <a asp-page="/Options/Edit" asp-route-quizId="@questionId" asp-route-id="@item.OptionId">Edit Option</a>
                        }
                    }
                    else
                    {
                        <p>No options exist for this question</p>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Question.QuestionId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
