@page
@model VanHorn_NET_Final.Pages.Submissions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Submission</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Submission.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Submission.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Submission.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Submission.Student.LastName)
        </dd>
    </dl>
    <table class="table">
        <tbody>
            <tr>
                @if (Model.Submission.Answers != null)
                {
                    <h4>Answers</h4>
                    <ul>
                        @foreach (var item in Model.Submission.Answers)
                        {
                            <li>@item.AnswerText @item.Correct</li>
                        }
                    </ul>
                }
                else
                {
                    <header>No Answers Submitted</header>
                }
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
